mixin pagination(page, pages, count)
	if count
		.pagination
			.pagination__prev
				if page > 1
					a(href=`/stores/page/${parseFloat(page) - 1}`) Prev
			.pagination__text
				p Page <strong>#{page}</strong> of #{pages} - <em>#{count} total results</em>
			.pagination__next
				if page < pages
					a(href=`/stores/page/${parseFloat(page) + 1}`)